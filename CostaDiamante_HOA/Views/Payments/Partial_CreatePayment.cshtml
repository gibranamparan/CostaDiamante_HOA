@model CostaDiamante_HOA.Models.Payments

@{
    ViewBag.Title = "Create";
    Model.ownerID = ViewBag.ownerID;
    Model.visitID = ViewBag.visitID;
    Model.date = DateTime.Today.AddDays(0);
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Payments", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()

