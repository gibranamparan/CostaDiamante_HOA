@using CostaDiamante_HOA.Models
@model CostaDiamante_HOA.Models.ApplicationUser

@{ 
    String roleName = ViewData["roleName"] != null ? (string)ViewData["roleName"] : ApplicationUser.RoleNames.OWNER;
    bool showLinks = ViewData["showLinks"] != null ? (bool)ViewData["showLinks"] : true;
    OwnersInfoContact ownerInfoModel = new OwnersInfoContact();
}

<div class="panel panel-info">
    <div class="panel-heading">
        <span class="panel-title">
            Owner's General Information
        </span>
    </div>
    <div class="panel-body">
        <div class="row">
            @if (Model is Owner)
            {
                <div class="form-group col-md-3">
                    <label>@Html.DisplayNameFor(model => ((Owner)Model).name)</label>
                    <div>@(((Owner)Model).name)</div>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayNameFor(model => ((Owner)Model).registrationDate)</label>
                    <div>@(((Owner)Model).registrationDate.Value.ToLongDateString())</div>
                </div>
            }
            <div class="form-group col-md-3">
                <label>@Html.DisplayNameFor(model => model.UserName)</label>
                <div>@Html.DisplayFor(model => model.UserName)</div>
            </div>
            <div class="form-group col-md-3">
                <label>@Html.DisplayNameFor(model => model.Email)</label>
                <div>@Html.DisplayFor(model => model.Email)</div>
            </div>
        </div>
        <div class="col-md-12 hidden-print @(!showLinks?"hidden":"")">
            <a href="@Url.Action("Edit", "Account", new { id = Model.Id })">
                <i class="fa fa-pencil"></i>Edit
            </a> 
            @if(roleName == ApplicationUser.RoleNames.OWNER) {
                <span> | </span>
                <a href="@Url.Action("Details","Owners", new { id = Model.Id })">
                    <i class="fa fa-list-alt"></i> Details
                </a>
            }
        </div>
    </div>
</div>


