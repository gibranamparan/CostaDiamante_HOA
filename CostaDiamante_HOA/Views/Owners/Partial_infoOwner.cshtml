@using CostaDiamante_HOA.Models
@model CostaDiamante_HOA.Models.ApplicationUser

@{ 
    String roleName = ApplicationUser.RoleNames.OWNER;
    if (ViewData["roleName"] != null)
    {
        roleName = (string)ViewData["roleName"];
    }
}

<div class="panel panel-info">
    <div class="panel-heading">
        <span class="panel-title">
            Owner's General Information
        </span>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="form-group col-md-4">
                <label>@Html.DisplayNameFor(model => model.fullName)</label>
                <div>@Html.DisplayFor(model => model.fullName)</div>
            </div>
            <div class="form-group col-md-4">
                <label>@Html.DisplayNameFor(model => model.Email)</label>
                <div>@Html.DisplayFor(model => model.Email)</div>
            </div>
            @if(Model is Owner) { 
            <div class="form-group col-md-4">
                <label>@Html.DisplayNameFor(model => ((Owner)Model).registrationDate)</label>
                <div>@(((Owner)Model).registrationDate.Value.ToLongDateString())</div>
            </div>
            }
        </div>
        <div class="col-md-12 hidden-print">
            <a href="@Url.Action("Edit", "Account", new { id = Model.Id })">
                <i class="fa fa-pencil"></i>Edit
            </a> 
            @if(roleName == ApplicationUser.RoleNames.OWNER) {
                <span> | </span>
                <a href="@Url.Action("Details","Owners", new { id = Model.Id })">
                    <i class="fa fa-list-alt"></i> Details
                </a>
                <span> | </span>
                <a href="@Url.Action("Index", "Permissions", new { id = Model.Id })">
                    <i class="fa fa-check-square-o"></i>Check in List
                </a>
            }
        </div>
    </div>
</div>


