@model Sonora_HOA.Models.RegisterViewModel
@{
    Boolean editMode = false;
    if (ViewData["editMode"] != null)
    {
        editMode = (Boolean)ViewData["editMode"];
    }
}

@using (Html.BeginForm(null, "Account", FormMethod.Post, 
    new { @class = "form-horizontal", role = "form", autocomplete = "off" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.userID)
    @Html.HiddenFor(model => model.hash)
    @Html.HiddenFor(model => model.stamp)
    <hr />
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.name)
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.lastname, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.lastname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.lastname)
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
    </div>
    if (!editMode) { 
    <div class="form-group">
        @Html.LabelFor(m => m.registerAsAdmin, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.registerAsAdmin, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.registerAsAdmin)
        </div>
    </div>
    }
    <div class="form-group col-md-6">
        <div class="col-md-10">
            <button class="btn btn-success">
            @if (editMode)
            {
                <span>Save</span>
            }
            else
            {
                <span>Register</span>
            } 
            </button>
        </div>
    </div>
}
