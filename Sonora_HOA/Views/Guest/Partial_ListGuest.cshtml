@model Sonora_HOA.Models.Owner
@using Sonora_HOA.Models;
@{ 
    var Guests = Model.Guest.Where(o => o.Id == Model.Id).ToList();
}

<div class="form-group">
    @using (Html.BeginForm("Create", "Guest", FormMethod.Post, new { @class = "col-xs-4 form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("Id", Model.Id)

        <div class="form-group">
            @Html.Label("Name")
            <input type="text" name="name" class="hidden-print form-control" required>
        </div>

        <div class="form-group">
            @Html.Label("Last Name")
            <input type="text" name="lastname" class="hidden-print form-control" required>
        </div>

        <input type="submit" value="Create" class="hidden-print btn btn-default col-md-3" />

    }
</div>





<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Guests)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.ActionLink("Edit","Edit","Guest", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete","Guest", new { id = item.Id },null)
            </td>
        </tr>
    }

</table>


