@model IEnumerable<Sonora_HOA.Models.Guest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Ownerid = ViewBag.Ownerid;
}

<h2>Create Guest</h2>
<div class="form-group">
    @using (Html.BeginForm("Create", "Guest", FormMethod.Post, new { @class = "col-xs-4 form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("Id", Ownerid)
       
        <div class="form-group">
            @Html.Label("Name")
            <input type="text" name="name" class="hidden-print form-control" required>
        </div>
       
        <div class="form-group">
            @Html.Label("Last Name")
            <input type="text" name="lastname" class="hidden-print form-control" required>
        </div>

            <input type="submit" value="Create" class="hidden-print btn btn-default col-md-3" />

    }
</div>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.guestID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.guestID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
