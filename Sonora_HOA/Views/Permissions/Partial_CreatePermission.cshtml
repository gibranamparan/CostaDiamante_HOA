@model Sonora_HOA.Models.Permissions
@using Sonora_HOA.Models

@{ 
    string ownerID = ViewBag.ownerID;
}

<div class="alert alert-info">Fill the Check in List for the selected period by selecting the guests in the list below.</div>
@using (Html.BeginForm("Create", "Permissions",FormMethod.Post,new { @class= "form-inline" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="form-group col-md-5">
        <label for="timePeriod">Year Period:</label>
        @Html.DropDownList("timePeriod",CheckInList.generatePermissionPeriods(), new { @class="form-control"})
    </div>
    <button class="btn btn-success" onclick="registerList()">Register</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
