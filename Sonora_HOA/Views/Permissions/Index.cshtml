@model IEnumerable<Sonora_HOA.Models.Permissions>
@using Sonora_HOA.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Permissions permission = new Permissions();

}

<h2>Index</h2>

<p>
    @Html.Partial("Partial_CreatePermission",permission)
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.condo.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.guest.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.condo.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.guest.name)&nbsp;@Html.DisplayFor(modelItem => item.guest.lastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.permissionsID }) |
            @Html.ActionLink("Details", "Details", new { id=item.permissionsID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.permissionsID })
        </td>
    </tr>
}

</table>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>