@model List<Sonora_HOA.Models.Permissions>

<table class="table table-hover table-striped datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().startDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().condo.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().guest.name)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.startDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.condo.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.guest.fullName)
                </td>
                <td>
                    <a href="@Url.Action("Delete","Permissions", new { id = item.permissionsID, ownerID = item.condo.ownerID })">
                        <i class="glyphicon glyphicon-remove"/>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
