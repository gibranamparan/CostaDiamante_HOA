                <section id="container banner">
                    <div class="body-content">
                        @RenderBody()
                    </div>
                </section>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Sonoran HOA</p>
                </footer>

            </div>
        </div>

        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">

                <!-- Menu -->

                <nav id="menu">
                    <header class="major">
                        <img src="~/images/LogoCamp.png" alt="Sonoran HOA" class="img-responsive">
                    </header>
                    <header class="major">
                        @*<ul>
                            <li>@Html.Partial("_LoginPartial")</li>
                        </ul>*@
                    </header>

                    @*@if (User.IsInRole("Admin"))
                    {*@
                        <ul>
