@model Sonora_HOA.Models.Visits

@{
    ViewBag.Title = "Visit - Guests List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hidden-print" style="margin-bottom: 2em">
    <a href='@Url.Action("Index")'>
        <i class="glyphicon glyphicon-arrow-left"></i> Back to Visits Report
    </a>

    <button class="btn btn-info pull-right" onclick="window.print()">
        <i class="fa fa-print"></i> Print
    </button>
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong>Period of time: </strong>@Model.timePeriod
        </h2>
    </div>
    <div class="panel-body">
        <hr />
        <dl class="dl-horizontal col-xs-4">
            <dt>
                @Html.DisplayNameFor(model => model.date)
            </dt>
            <dd>
                @Model.date.ToLongDateString()
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.owner.fullName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.owner.fullName)
            </dd>
        </dl>

        <dl class="dl-horizontal col-xs-4">
            <dt>
                @Html.DisplayNameFor(model => model.arrivalDate)
            </dt>
            <dd>
                @Model.arrivalDate.ToLongDateString()
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.condo.name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.condo.name)
            </dd>
        </dl>

        <dl class="dl-horizontal col-xs-4">
            <dt>
                @Html.DisplayNameFor(model => model.departureDate)
            </dt>
            <dd>
                @Model.departureDate.ToLongDateString()
            </dd>
        </dl>
</div>
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">
            Visitors
        </h2>
    </div>
    <div class="panel-body">
        <table>
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.visitors
         .FirstOrDefault().permissions.guest.fullName)
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int num = 1;
                    foreach (var item in Model.visitors
                            .OrderBy(vis => vis.permissions.guest.fullName))
                    {
                        <tr>
                            <td>
                                @num
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.permissions.guest.fullName)
                            </td>
                        </tr>
                        num++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

