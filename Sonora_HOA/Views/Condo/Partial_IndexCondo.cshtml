@model Sonora_HOA.Models.Owner
@using Sonora_HOA.Models

@{ 
    Condo newCondo = new Condo();
    newCondo.ownerID = Model.Id;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">New Owner's Condo</h3>
    </div>
    <div class="panel-body">
        @Html.Partial("../Condo/Partial_CreateCondo", newCondo)
    </div>
</div>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Condos.FirstOrDefault().num)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Condos.FirstOrDefault().name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Condos) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit","Condo", new { id = item.condoID }, null) |
            @Html.ActionLink("Details", "Details", "Condo", new { id = item.condoID }, null) |
            @Html.ActionLink("Delete", "Delete", "Condo", new { id = item.condoID }, null)
        </td>
    </tr>
}

</table>
