@model Sonora_HOA.Models.Owner
@using Sonora_HOA.Models

@{ 
    Condo newCondo = new Condo();
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">New Owner's Condo</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="form">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-md-12">
                    @Html.LabelFor(model => newCondo.name, htmlAttributes: new { @class = "col-md-2" })
                    @Html.EditorFor(model => newCondo.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => newCondo.name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <button class="btn btn-success">Create</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Condos) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.number }) |
            @Html.ActionLink("Details", "Details", new { id=item.number }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.number })
        </td>
    </tr>
}

</table>
