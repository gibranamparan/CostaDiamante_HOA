@model Sonora_HOA.Models.Owner
@using Microsoft.AspNet.Identity
@using Sonora_HOA.Models

<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title">
            <strong>Owner's General Information</strong>
        </h2>
    </div>
    <div class="panel-body">
        <div>
            <hr />
            <dl class="dl-horizontal col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.fullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.fullName)
                </dd>

            </dl>
            <dl class="dl-horizontal col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

            </dl>
            <dl class="dl-horizontal col-md-4">
                <dt>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
            </dl>
           </div>
        <p>

            <a href="@Url.Action("Details", new { id = Model.Id })">
                <i class="fa fa-list-alt"></i> Details
            </a> | 
            <a href="@Url.Action("Edit", "Owners", new { id = Model.Id })">
                <i class="fa fa-pencil"></i>Edit
            </a> | 
            <a href="@Url.Action("Index", "Permissions", new { id = Model.Id })">
                <i class="fa fa-check-square-o"></i>Check in List
            </a>
        </p>
    </div>
</div>


